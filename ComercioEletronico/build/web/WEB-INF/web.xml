<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>ListarProdutos</servlet-name>
        <servlet-class>controller.ListarProdutos</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>InformarIdade</servlet-name>
        <servlet-class>controller.InformarIdade</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddCarrinho</servlet-name>
        <servlet-class>controller.AddCarrinho</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Carrinho</servlet-name>
        <servlet-class>controller.Carrinho</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Logoff</servlet-name>
        <servlet-class>controller.Logoff</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListarPromocoes</servlet-name>
        <servlet-class>controller.ListarPromocoes</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ListarProdutos</servlet-name>
        <url-pattern>/ListarProdutos</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InformarIdade</servlet-name>
        <url-pattern>/InformarIdade</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddCarrinho</servlet-name>
        <url-pattern>/AddCarrinho</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Carrinho</servlet-name>
        <url-pattern>/Carrinho</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Logoff</servlet-name>
        <url-pattern>/Logoff</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListarPromocoes</servlet-name>
        <url-pattern>/ListarPromocoes</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <security-constraint>
        <display-name>Restrição1</display-name>
        <web-resource-collection>
            <web-resource-name>ListarPromocoes</web-resource-name>
            <description/>
            <url-pattern>/ListarPromocoes</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>PREMIUM</role-name>
            <role-name>NORMAL</role-name>
            <role-name>GERENTE</role-name>
        </auth-constraint>
    </security-constraint>
    <security-role>
        <description/>
        <role-name>PREMIUM</role-name>
    </security-role>
    <security-role>
        <description/>
        <role-name>NORMAL</role-name>
    </security-role>
    <security-role>
        <description/>
        <role-name>GERENTE</role-name>
    </security-role>
</web-app>
